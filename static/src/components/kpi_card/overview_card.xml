<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl.OverviewCard" owl="1">
        <div class="col-lg-3 p-2">
            <div class="card h-100 border-0 shadow-sm p-3 bg-white" style="border-radius: 10px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="h6 fw-bolder text-dark mb-0" t-esc="props.name"/>
                    <i class="fa fa-ellipsis-h text-muted" style="cursor: pointer;"/>
                </div>

                <div class="d-flex align-items-baseline mb-4">
                    <span class="fw-bolder text-dark me-2" style="font-size: 32px;" t-esc="props.value"/>
                    <span class="text-muted small" t-esc="props.description"/>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-auto">
                    <span t-attf-class="badge rounded-pill px-3 py-1 #{props.priority === 'High' ? 'bg-warning-light text-warning-dark' : 'bg-light text-muted'}" 
                          style="font-size: 12px; font-weight: 500;">
                        <t t-esc="props.priority || 'Normal'"/> Priority
                    </span>
                    
                    <a href="#" class="text-decoration-none small fw-bold d-flex align-items-center" style="color: #71639e;">
                        <span class="me-1" t-esc="props.action_text || 'View'"/>
                        <i class="fa fa-arrow-right"/>
                    </a>
                </div>
            </div>
        </div>
    </t>
</templates>