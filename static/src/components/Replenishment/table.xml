<templates xml:space="preserve">
    <t t-name="owl.ReplenishmentTable" owl="1">
        <div class="shadow-sm border rounded bg-white">

            <table class="table table-hover mb-0">
                <thead class="bg-light text-muted small">
                    <tr>
                        <th class="ps-4 border-0">Product</th>
                        <th class="border-0">Stock</th>
                        <th class="border-0">Min</th>
                        <th class="border-0">Order Qty</th>
                        <th class="border-0">Vendor</th>
                        <th class="text-end pe-4 border-0">Action</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <t t-foreach="items" t-as="item" t-key="item.id">
                        <tr>
                            <td class="ps-4 fw-medium text-secondary" t-esc="item.product"/>
                            <td class="text-danger fw-bold" t-esc="item.stock"/>
                            <td class="text-muted" t-esc="item.min"/>
                            <td class="text-success fw-bold" t-esc="item.qty"/>
                            <td class="text-muted" t-esc="item.vendor"/>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm rounded-pill px-3" 
                                        style="background-color: #f0f1ff; color: #666ee8; border: none;"
                                        t-on-click="() => this._onOrder(item)">
                                    <i class="fa fa-plus-circle me-1"/> Order
                                </button>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>